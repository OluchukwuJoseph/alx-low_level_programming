# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Phony targets
.PHONY: all clean oclean fclean re

# The all rule
all: ${NAME}

${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

# This rule deletes all Emacs and Vim temporary files along with the executable
clean:
	${RM} *~ ${NAME}

# This rule deletes the object files.
oclean:
	${RM} ${OBJ}

# This rule  deletes all Emacs and Vim temporary files, the executable
# and the object files.
fclean:
	${RM} *~ ${NAME}
	${RM} ${OBJ}

# This rule forces recompilation of all source files.
re:
	${CC} ${CFLAGS}    -c -o ${word 1,${OBJ}} ${word 1,${SRC}}
	${CC} ${CFLAGS}    -c -o ${word 2,${OBJ}} ${word 2,${SRC}}
	${CC} ${OBJ} -o ${NAME}
